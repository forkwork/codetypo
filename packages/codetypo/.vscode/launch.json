{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run",
            "program": "${workspaceRoot}/bin.mjs",
            "args": ["--cache", "--no-progress", "**"],
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run no args",
            "program": "${workspaceRoot}/bin.mjs",
            "args": [],
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run CodeTypo against current file",
            "program": "${workspaceRoot}/bin.mjs",
            "args": ["-v", "${file}"],
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true,
            "preLaunchTask": "npm: build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run CodeTypo against stdin",
            "program": "${workspaceRoot}/bin.mjs",
            "args": ["-v", "stdin"],
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run Trace",
            "program": "${workspaceRoot}/bin.mjs",
            "args": ["trace", "about"],
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run Check",
            "program": "${workspaceRoot}/bin.mjs",
            "args": [
                "check",
                "--config",
                "${workspaceRoot}/samples/.codetypo.json",
                "${workspaceRoot}/samples/src/sample.c"
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run Link",
            "program": "${workspaceRoot}/bin.mjs",
            "args": ["link"],
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "codetypo: Run Link Add",
            "program": "${workspaceRoot}/bin.mjs",
            "args": ["link", "add", "codetypo-dict-nl-nl/codetypo-ext.json"],
            "cwd": "${workspaceRoot}/../codetypo-lib",
            "outFiles": ["${workspaceRoot}/dist/**"],
            "sourceMaps": true
        }
    ]
}
