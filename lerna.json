{
  "npmClient": "pnpm",
  "packages": [
    "./packages/*",
    "./rfc/*",
    "./test-packages/*/*",
    "./integration-tests",
    "./dictionaries/*"
  ],
  "version": "8.17.2",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md",
        "package-lock.json",
        "codetypo.json"
      ]
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}"
  }
}